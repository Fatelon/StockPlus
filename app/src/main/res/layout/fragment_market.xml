<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_tab_height"
        android:background="@color/darkMenuBackground">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:gravity="center">
            <TableRow>
                <com.fatelon.stocksplus.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/screen_side_padding"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="@dimen/login_common_text_size"
                    android:textColor="@color/white"
                    android:text="@string/tab_edit"
                    app:font_type="4"/>
                <com.fatelon.stocksplus.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/login_title_text_size"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="@string/tab_market"
                    app:font_type="4"/>
                <ImageView
                    android:id="@+id/settings_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/screen_side_padding"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/tab_settings"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <com.fatelon.stocksplus.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/login_title_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="@string/tab_market"
        app:font_type="1"/>
    <com.fatelon.stocksplus.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/login_title_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="@string/tab_market"
        app:font_type="2"/>
    <com.fatelon.stocksplus.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/login_title_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="@string/tab_market"
        app:font_type="3"/>
    <com.fatelon.stocksplus.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/login_title_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="@string/tab_market"
        app:font_type="4"/>
    <com.fatelon.stocksplus.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/login_title_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="@string/tab_market"
        app:font_type="5"/>
    <com.fatelon.stocksplus.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/login_title_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="@string/tab_market"
        app:font_type="6"/>
    <com.fatelon.stocksplus.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/login_title_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="@string/tab_market"
        app:font_type="7"/>
</LinearLayout>