<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height">
    <RelativeLayout
        android:id="@+id/market_list_view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/market_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/screen_side_padding"/>

        <com.fatelon.stocksplus.view.customviews.CustomTextView
            android:id="@+id/market_item_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/menu_tab_height"
            android:textColor="@color/whiteTextColor"
            android:textSize="@dimen/item_text_size"
            android:text="Text"
            app:font_type="4"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_padding"
            android:paddingRight="@dimen/screen_double_side_padding"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right_arrow"/>


    </RelativeLayout>
    <FrameLayout
        android:id="@+id/item_click_flash"
        android:visibility="gone"
        android:alpha="0.6"
        android:background="@color/whiteTextColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
